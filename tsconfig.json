{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": [
      "./controllers/@types",
      "./src/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "cronjobs",
    "controllers",
    "middleware",
    "src",
    "devUtils/dataMigration",
    "devUtils/utilScripts",
    "test",
    "server.ts",
    ".eslintrc.cjs"
  ]
}
