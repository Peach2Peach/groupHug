{
  "name": "grouphug",
  "version": "0.0.1",
  "description": "",
  "bin": "./dist/server.js",
  "main": "server.ts",
  "scripts": {
    "start": "npm run build:clean && tsc --project ./tsconfig.json & node ./dist/server.js",
    "start:dev": "nodemon",
    "build": "npm run build:clean && tsc --project ./tsconfig.json",
    "build:clean": "if [ -d ./dist ]; then find ./dist -regex '.*\\(js\\|map\\)$' -delete; fi",
    "build-bin": "npm run build && pkg -C Brotli . && for i in ./dist/devUtils/dataMigration/*.js; do if [ -e $i ]; then pkg -C Brotli --targets node16-linux-x64 --out-path ./bin $i; fi; done",
    "lint": "eslint './**/*.{js,ts}'",
    "test": "BATCH_TIME_THRESHOLD=600 TS_NODE_TRANSPILE_ONLY=true nyc mocha --parallel --jobs 3 -r ts-node/register --require ./test/unit/hooks.ts \"./{,!(test|node_modules)/**}/*.spec.ts\" --exit",
    "test:ci": "BATCH_TIME_THRESHOLD=600 TS_NODE_TRANSPILE_ONLY=true nyc mocha --parallel --jobs 3 --timeout 5000 -r ts-node/register --require ./test/unit/hooks.ts \"./{,!(test|node_modules)/**}/*.spec.ts\" --exit",
    "test:single": "BATCH_TIME_THRESHOLD=600  TS_NODE_TRANSPILE_ONLY=true nyc mocha -r ts-node/register --require ./test/unit/hooks.ts --exit",
    "integration": "mocha --timeout 10000000 -r ts-node/register ./test/integration/**/*.test.ts --exit",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Peach2Peach/grouphug.git"
  },
  "author": "Peach2Peach",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Peach2Peach/grouphug/issues"
  },
  "homepage": "https://github.com/Peach2Peach/grouphug#readme",
  "dependencies": {
    "bip174": "^2.1.1",
    "bip32": "^3.0.1",
    "bitcoinjs-lib": "github:Peach2Peach/bitcoinjs-lib",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^10.0.0",
    "ecpair": "^2.0.1",
    "express": "^4.18.2",
    "helmet": "^4.6.0",
    "http": "^0.0.1-security",
    "minimist": "^1.2.8",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "pkg": "^5.8.0",
    "redis": "^4.6.7",
    "tiny-secp256k1": "^2.2.1",
    "typescript": "^4.5.2",
    "varuint-bitcoin": "^1.1.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/minimist": "^1.2.5",
    "@types/mocha": "^9.1.0",
    "@types/mocha-prepare": "^0.1.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.6",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.11",
    "@types/sinon": "^10.0.20",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^4.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-jsdoc": "^46.10.1",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "regtest-client": "^0.2.1",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.2"
  },
  "pkg": {
    "targets": [
      "node16-linux-x64"
    ],
    "outputPath": "./bin"
  }
}
